{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.tsx",
    "./styles.css": "./dist/index.css",
    "./components": "./src/components/index.ts",
    "./data": "./src/data.ts"
  },
  "scripts": {
    "build": "tsc && tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:ts": "tsc",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch --optimize",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "test": "vitest --browser.headless",
    "dev:test": "vitest"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/utils": "workspace:*",
    "@tailwindcss/cli": "^4.0.0",
    "@turbo/gen": "^2.3.4",
    "@types/node": "^22.10.10",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.4",
    "playwright": "^1.50.0",
    "typescript": "5.7.3",
    "vitest": "^3.0.4",
    "vitest-browser-react": "^0.0.4"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "next": "^15.1.6",
    "next-link": "^2.0.0",
    "postcss": "^8.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0"
  }
}
